{
    "build": {
        "beforeBuildCommand": "yarn build",
        "beforeDevCommand": "yarn dev",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "dad-timer-overlay",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "globalShortcut": {
                "all": true
            },
            "shell": {
                "all": false,
                "open": true
            },
            "window": {
                "setDecorations": true
            }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "net.mizle.dad-timer-overlay",
            "targets": "all"
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "alwaysOnTop": true,
                "decorations": false,
                "fullscreen": false,
                "height": 140,
                "resizable": true,
                "title": "dad-timer-overlay",
                "transparent": true,
                "width": 320,
                "x": 2210,
                "y": 960
            }
        ]
    }
}
